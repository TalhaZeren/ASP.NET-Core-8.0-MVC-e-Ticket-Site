            <script>
                var selectedSeat = null;
                var hallId = "@Model.hallId"; // HallID'yi Razor modelinden alıyoruz

                function selectSeat(seat) {
                    if (!seat.classList.contains('closed-seat')) {
                        if (selectedSeat) {
                            selectedSeat.classList.remove('selected'); // Önceki seçilen koltuğu kaldır
                        }
                        selectedSeat = seat; // Yeni koltuğu seç
                        seat.classList.toggle('selected');
                        updateContinueButton();
                    }
                }

                function updateContinueButton() {
                    var continueButton = document.getElementById("continueButton");
                    continueButton.style.display = selectedSeat ? "block" : "none";
                }

                function confirmSelection() {
                    var seatId = selectedSeat.getAttribute("data-seatid");
                    var productId = "@Model.ProductId"; // Razor'dan productId'yi alıyoruz
                    var hallId = "@Model.hallId"; // Razor'dan hallId'yi alıyoruz

                    saveToDatabase(seatId, productId, hallId); // HallID'yi de gönderiyoruz
                }

                function saveToDatabase(seatId, productId, hallId) {
                    $.ajax({
                        url: '/SelectSeat/SaveSeats',
                        type: 'POST',
                        data: { seatId: seatId, productId: productId, hallId: hallId }, // HallID'yi de gönderiyoruz
                        dataType: "json",
                        success: function (response) {
                            if (response.success) {
                                alert('Koltuk başarıyla alındı!');

                                selectedSeat.classList.add('closed-seat');
                                selectedSeat.classList.remove('selected');
                                selectedSeat.style.backgroundColor = 'yellow';

                                selectedSeat = null;
                                updateContinueButton();

                                document.getElementById('successModal').style.display = 'block';
                                document.getElementById('redirectButton').addEventListener('click', function () {
                                    window.location.href = '/Card/Index';
                                });
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function (error) {
                            console.error('Hata:', error);
                        }
                    });
                }
            </script>


