    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }

        .stage {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: grey;
            width: 100%;
            height: 25vh;
            color: white;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: 24px;
        }

        .seatLocation {
            display: flex;
            justify-content: center;
        }

        .selectSeat {
            background-color: #ffffff;
            margin: 5px;
            cursor: pointer;
            text-align: center;
            width: 50px;
            height: 50px;
            justify-content: center;
            align-items: center;
        }

            .selectSeat.selected {
                padding: 10px;
                border: 1px solid #888;
                align-items: center;
                background: #ff6f61;
                justify-content: center;
            }

            .selectSeat.closed-seat {
                background-color: yellow;
                cursor: not-allowed;
            }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 300px;
            text-align: center;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: black;
                text-decoration: none;
                cursor: pointer;
            }

        .modal-button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }

            .modal-button:hover {
                background-color: #45a049;
            }


        .seatLocation {
            display: flex;
            justify-content: center;
            flex-direction: row; /* Koltuklar ve resmi yan yana göstermek için */
            align-items: center;
        }

        .seatSection {
            display: flex;
            flex-direction: column;
        }

        .productImage {
            margin-right: 20px; /* Resim ile koltuklar arasına boşluk eklemek için */
        }
    </style>
</head>

