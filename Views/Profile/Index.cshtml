                            @if (Model.Tickets != null)
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Adı</th>
                                            <th>Soyadı</th>
                                            <th>Bilet Numarası</th>
                                            <th>Etkinlik</th>
                                            <th>Kategori</th>
