    </section>

    <script>
        document.getElementById('profileBtn').addEventListener('click', function () {
            document.getElementById('profileSection').style.display = 'block';
            document.getElementById('ticketsSection').style.display = 'none';

            this.classList.add('active');
            document.getElementById('ticketsBtn').classList.remove('active');
        });

        document.getElementById('ticketsBtn').addEventListener('click', function () {
            document.getElementById('profileSection').style.display = 'none';
            document.getElementById('ticketsSection').style.display = 'block';

            this.classList.add('active');
            document.getElementById('profileBtn').classList.remove('active');
        });

    </script>

</body>
</html>