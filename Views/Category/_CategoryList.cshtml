@model IEnumerable<BiletPortal.Models.Category>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary mx-2">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-secondary mx-2">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger mx-2">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


