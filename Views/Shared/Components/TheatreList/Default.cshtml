@model List<BiletPortal.Models.Products>


<div class="container-fluid pt-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Tiyatro</span></h2>
    </div>
    <div class="row px-xl-5 pb-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a href="~/Home/Detail/@item.ProductId">
                            <img class="img-fluid w-100" src="/Urunler/@item.ProductPicture" alt="">
                        </a>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.ProductName    </h6><h6>@item.ProductPrice ₺</h6> <br />
                        <div class="d-flex justify-content-center">
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                       
                    </div>
                </div>
            </div>
        }
    </div>
</div>