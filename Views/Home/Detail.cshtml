@model BiletPortal.Models.Products
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Detail";
    var tokens = Antiforgery.GetAndStoreTokens(Context);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <style>

        .popup {
            width: 400px;
            background: #fff;
            border-radius: 6px;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.1);
            text-align: center;
            padding: 20px;
            visibility: hidden;
            transition: all 0.3s ease-in-out;
        }

        .open-popup {
            visibility: visible;
            transform: translate(-50%, -50%) scale(1);
        }

        .popup h2 {
            margin: 20px 0;
        }

        .popup button {
            padding: 10px;
            background-color: green;
            color: white;
            border: none;
            cursor: pointer;
        }

    </style>

</head>

<body>


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 150px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Etkinlik Detayı</h1>
            <div class="d-inline-flex">
                <p class="m-0">
                    <a href="/Home/Index">
                        <button class="btn btn-light">Anasayfa</button>
                    </a>
                </p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->
    <!-- Shop Detail Start -->
    <div class="container-fluid py-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 pb-5">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner border">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="/Urunler/@Model.ProductPicture" alt="Image">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-7 pb-5">
                <h3 class="font-weight-semi-bold">@Model.ProductName</h3>
                
                <h3 class="font-weight-semi-bold mb-4">@Model.ProductPrice ₺</h3>
                <p class="mb-4">@Model.ProductDescription</p>
              
                <div >
                    <div style="width: 130px;">
                       
                    </div>


                    <button id="add-to-cart" class="btn btn-success text-dark p-3" ">
                        <i class="fas fa-shopping-cart tex-primary mr-1"></i>Sepete Ekle
                    </button>
                </div>


                <!-- Popup -->
                <div id="popup" class="popup">
                    <img src="/LoginPageImage/tick.png" alt="Success" />
                    <h2>Başarıyla Sepete Eklendi!</h2>
                    <button id="redirect-button">Koltuk Seçimine Git</button>
                </div>



               
    <script>
        const csrfToken = '@tokens.RequestToken'; // CSRF token JavaScript'te kullanıma hazır
        document.getElementById("add-to-cart").addEventListener("click", function () {

            var productId = "@Model.ProductId";

            fetch('/Card/Add/' + productId, {
                method: "POST",
                headers: {
                    'Content-Type': 'json',
                    'X-CSRF-TOKEN': csrfToken
                }
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("popup").classList.add("open-popup");
                    } else {
                        alert(data.message);
                        window.location.href = '/Login/Index'; // Yönlendirilmek istenen sayfa URL'si
                    }
                });
        });

        document.getElementById("redirect-button").addEventListener("click", function () {
            window.location.href = '/SelectSeat/Index?productId=@Model.ProductId';
        });
    </script>


</body>
</html>
